<MyLayout>:
	canvas.before:
		Color:
			rgba:[1,1,1,1]
		Rectangle:
			pos:self.pos
			size:self.size
	TextInput:
		id:ti

		pos_hint: {'center_x': 0.5,'y':0.92}
		size_hint:0.8,None
		height:dp(50)
		hint_text:'Enter Url'


	GLWebView:
		url:'https://google.com/'
		enable_javascript:True
		update_fps:30
		size_hint: (None, None)
		size:900,1600
		pos:100,400
		id:gw
		


		
	Button:
		pos_hint: {'center_x': 0.2,'y':0.05}
		size_hint: (None, None)
		size:dp(100),dp(50)
		text: 'start update'
		on_release:root._start()
	Button:
		pos_hint: {'center_x': 0.5,'y':0.05}
		size_hint: (None,None)
		size:dp(100),dp(50)
		text:'load url'
		on_release:gw.load_url(ti.text)
	
	Button:
		pos_hint: {'x': 0.7,'y':0.05}
		size_hint: (None, None)
		size:dp(100),dp(50)
		text: 'stop update'
		on_release:root._stop()
	

	




